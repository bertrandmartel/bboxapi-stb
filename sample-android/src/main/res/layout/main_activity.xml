<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/rest_discovery_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Rest discovery" />

    <Button
        android:id="@+id/ws_discovery_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Wesocket discovery" />

    <Button
        android:id="@+id/ws_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/stb_rest_service_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/stb_rest_service_dialog_title"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/stb_rest_service_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stb_rest_service_title"
                android:layout_margin="20dp"
                android:background="@drawable/border_ui"
                android:divider="#FFFFFF"
                android:dividerHeight="1px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/stb_ws_service_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/stb_ws_service_dialog_title"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/stb_ws_service_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stb_ws_service_title"
                android:layout_margin="20dp"
                android:background="@drawable/border_ui"
                android:divider="#FFFFFF"
                android:dividerHeight="1px" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>